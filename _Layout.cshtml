@{
    BOPView.Models.UserInfo userInfo = (BOPView.Models.UserInfo)Session["UserInfo"];
    string RequestUrl = Url.RequestContext.RouteData.Values["action"].ToString();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title | BOP</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Public/image/favicon.ico">
    <link href="~/Public/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Public/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Public/css/_Layout.css" rel="stylesheet" type="text/css" />
    <link href="~/Public/css/responsive.css" rel="stylesheet" type="text/css" />
</head>

<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle d-none d-lg-flex">
            <a href="~/Admin/Dashboard">
                <img src="~/Public/image/logo.png" alt="logo" class="main-logo">
            </a>
                <i class='bx bx-menu' id="header-toggle"></i>
            
        </div>
        <nav class="navbar navbar-dark navbar-expand-lg mobile-nav d-block d-lg-none">
            <a class="navbar-brand" href="~/Admin/Dashboard">
                <img src="~/Public/image/logo.png" alt="logo" class="mobile-logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"> <span class="navbar-toggler-icon"></span> </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav_link @(@RequestUrl == "Dashboard" ? "active" : "")" aria-current="page" href="~/Admin/Dashboard">
                            <i class='bx bx-grid-alt'></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav_link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class='bx bxs-cog pe-2'></i>Settings
                        </a>
                        <ul class="dropdown-menu @(@RequestUrl == "RolesMaster" || @RequestUrl == "UserMaster" || @RequestUrl == "RolesMapping" ? "show" : "")" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item  @(@RequestUrl == "RolesMaster" ? "active" : "")" href="~/Admin/RolesMaster">
                                    <i class='bx bxs-user pe-2'></i>Roles Master
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item @(@RequestUrl == "UserMaster" ? "active" : "")" href="~/Admin/UserMaster">
                                    <i class='bx bxs-user pe-2'></i>User Master
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item @(@RequestUrl == "RolesMapping" ? "active" : "")" href="~/Admin/RolesMapping">
                                    <i class='bx bxs-user pe-2'></i>Roles Mapping
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a href="~/Login/Logout" class="nav_link">
                            <i class='bx bx-log-out nav_icon'></i>
                            <span class="nav_name">Sign Out</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <div class="profile-nav mobile-profile">
                            <div class="profile-media">
                                <img src="~/Public/image/profile.png" alt="profile">
                            </div>
                            <div class="media-name">
                                <p class="profile-name mb-0">@userInfo.UserName</p>
                                <span class="profile-role mb-0">@userInfo.RoleName</span>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="profile-nav mobile-profile d-none d-lg-flex">
            <div class="profile-media">
                <img src="~/Public/image/profile.png" alt="profile">
            </div>
            <div class="media-name">
                <p class="profile-name mb-0">@userInfo.UserName</p>
                <span class="profile-role mb-0">@userInfo.RoleName</span>
            </div>
        </div>
        <div class="user-logout">
            <a href="~/Login/Logout" class="">
                <i class='bx bx-power-off'></i>
                @*<span class="nav_name">Sign Out</span>*@
            </a>
        </div>
    </header>
    <div class="l-navbar d-none d-lg-block" id="nav-bar">
        <nav class="nav">
            <div class="subnav">
                <div class="nav_list">
                    <a href="~/Admin/Dashboard" class="nav_link @(@RequestUrl == "Dashboard" ? "active" : "")">
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name">Dashboard</span>
                    </a>
                    <a class="nav_link @(@RequestUrl == "RolesMaster" || @RequestUrl == "UserMaster" || @RequestUrl == "RolesMapping" ? "active" : "")" data-bs-toggle="collapse" href="#settings" role="button" aria-expanded="false" aria-controls="settings">
                        <i class='bx bxs-cog'></i>
                        <span class="nav_name">Settings</span>
                    </a>
                    <div class="collapse navbar-collapse  @(@RequestUrl == "RolesMaster" || @RequestUrl == "UserMaster" || @RequestUrl == "RolesMapping" ? "show" : "")" id="settings">
                        <ul class="navbar-nav">
                            <li>
                                <a class="nav_link @(@RequestUrl == "RolesMaster" ? "active" : "") submenu" href="~/Admin/RolesMaster">
                                    <i class='bx bxs-user'></i>
                                    Roles Master
                                </a>
                            </li>
                            <li>
                                <a class="nav_link @(@RequestUrl == "UserMaster" ? "active" : "") submenu" href="~/Admin/UserMaster">
                                    <i class='bx bxs-user'></i>
                                    User Master
                                </a>
                            </li>
                            <li>
                                <a class="nav_link @(@RequestUrl == "RolesMapping" ? "active" : "") submenu" href="~/Admin/RolesMapping">
                                    <i class='bx bxs-user'></i>
                                    Roles Mapping
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <section class="main">
        <div class="container-fluid main-content">
            @RenderBody()
        </div>
    </section>

    <script src="~/Public/vendor/jquery/jquery-3.6.1.min.js"></script>
    <script src="~/Public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Public/js/_Layout.js"></script>
</body>
</html>